<h1>Pump Up the Jam</h1>

<div class="row">
  <div class="col-md-4">
    <%= image_tag 'jamjar.png' %>
  </div>
  <div class="col-md-8">
    <%= form_tag search_path, method: "post", class: "form-inline" do %>
      <div class="form-group">
        <%= label_tag(:artist) %>
        <%= text_field_tag :artist, "", class: "form-control" %>
      </div>

      <%= submit_tag "Search", class: "search btn btn-default" %>
    <% end %>
    <ul class="list-group">
    </ul>
  </div>
</div>
