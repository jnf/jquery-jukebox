<h1>Jukebox Jams</h1>

<%= form_tag search_path, method: "get" do %>
  <%= label_tag(:artist) %>
  <%= text_field_tag(:artist) %>
  <%= submit_tag("Search Jams", class: "search") %>
<% end %>
<br>
<%= button_to "Popular Jams", popular_path, method: :get, class: "popular" %>
<br>
<%= button_to "Random Jams", chance_path, method: :get, class: "chance" %>
<div class="results"></div>
