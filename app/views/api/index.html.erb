<div class="jumbotron">
  <div class="container">
    <h1 class=jumbo-search>Find my groove</h1>
    <div class="form-group">
      <%= form_tag('/search', method: "get", class: "form-inline") do %>
        <%= text_field_tag :artist %>
        <%= submit_tag "Search", class: "artist-search btn btn-default" %>
        <% end %>
      </div>
  </div>
</div>

<div class="container">
  <div class="col-md-4 new-grooves">
    <%= button_to "Hot and New", "/popular", method: "get", class: "hot-songs btn btn-default" %>
  </div>
</div>
