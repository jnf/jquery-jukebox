<h1>Find songs of your favourite artist!<h1>
<%= form_tag("/search/", method: "get") do %>
  <%= text_field_tag :artist, class: "artist" %>
  <%= submit_tag "Search", class: "singer" %>
<% end %>

<%= form_tag("/popular", method: "get") do %>
  <%= submit_tag "Find most popular songs", class: "popular" %>
<% end %>
